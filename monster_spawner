from monster import *
import random
class MonsterSpawner:
    monster_list = []
    count = 0
    def spawnMonster(self, location):
        spawn_chance = random.randint(0, 100)
        if spawn_chance <= 40:
            monster = Goblin()
        elif spawn_chance <= 70:
            monster = Monster()
        elif spawn_chance <= 90:
            monster = Troll()
        else:
            monster = Dragon()
        monster.pos = (location)
        monster.number = self.count
        self.monster_list.append(monster)
        self.count += 1